'use client';

import { useSocket } from '@/lib/socket';
import { useEffect, useState, useRef } from 'react';
import { useRouter, useSearchParams } from 'next/navigation';
import type { Player } from '@/types/socket';
import { getRandomWord } from '@/data/drawing-words';

interface PlayerScore {
  playerId: string;
  name: string;
  color: string;
  score: number;
  guessed: boolean;
}

interface DrawPoint {
  x: number;
  y: number;
  color: string;
  size: number;
}

export default function DrawingGamePage() {
  const { socket, isConnected } = useSocket();
  const router = useRouter();
  const searchParams = useSearchParams();
  const role = searchParams.get('role');
  const canvasRef = useRef<HTMLCanvasElement>(null);

  const [players, setPlayers] = useState<Player[]>([]);
  const [playerScores, setPlayerScores] = useState<Map<string, PlayerScore>>(new Map());
  const [currentDrawerIndex, setCurrentDrawerIndex] = useState(0);
  const [currentWord, setCurrentWord] = useState('');
  const [gameState, setGameState] = useState<'waiting' | 'drawing' | 'results' | 'final'>('waiting');
  const [timeLeft, setTimeLeft] = useState(60);
  const [drawingData, setDrawingData] = useState<DrawPoint[]>([]);
  const [guessInput, setGuessInput] = useState('');
  const [roundNumber, setRoundNumber] = useState(1);
  const maxRounds = 3;

  // Initialize game
  useEffect(() => {
    if (!socket || !isConnected) return;

    socket.emit('get-room-info', (response) => {
      if (response.success && response.players) {
        const nonHostPlayers = response.players.filter(p => !p.isHost);
        setPlayers(nonHostPlayers);
        
        const scores = new Map<string, PlayerScore>();
        nonHostPlayers.forEach(player => {
          scores.set(player.id, {
            playerId: player.id,
            name: player.name,
            color: player.color,
            score: 0,
            guessed: false
          });
        });
        setPlayerScores(scores);

        if (role === 'host') {
          const word = getRandomWord();
          setCurrentWord(word);
          
          socket.emit('game-state-update', {
            type: 'drawing-init',
            drawerIndex: 0,
            drawerId: nonHostPlayers[0].id,
            word: word
          });
        }
      }
    });

    // Listen for drawing data
    socket.on('game-state-update', (data) => {
      if (data.type === 'drawing-init') {
        setCurrentDrawerIndex(data.drawerIndex);
        setCurrentWord(data.word || '');
      } else if (data.type === 'drawing-data') {
        setDrawingData(data.points || []);
      } else if (data.type === 'drawing-clear') {
        setDrawingData([]);
      } else if (data.type === 'drawing-guess') {
        handleGuess(data.playerId, data.guess);
      }
    });

    socket.on('controller-input', (data) => {
      console.log('Controller input received:', data);
      console.log('Current game state:', gameState);
      if (data.action === 'draw' && role === 'host' && gameState === 'drawing') {
        console.log('Processing draw action');
        const newPoint: DrawPoint = {
          x: data.x,
          y: data.y,
          color: data.color || '#000000',
          size: data.size || 5
        };
        console.log('New point:', newPoint);
        setDrawingData(prev => {
          const updated = [...prev, newPoint];
          console.log('Updated drawing data length:', updated.length);
          // Broadcast to all players
          socket.emit('game-state-update', { 
            type: 'drawing-data', 
            points: updated 
          });
          return updated;
        });
      } else if (data.action === 'clear' && role === 'host' && gameState === 'drawing') {
        console.log('Clearing canvas');
        setDrawingData([]);
        socket.emit('game-state-update', { type: 'drawing-clear' });
      } else if (data.action === 'guess' && role === 'host' && gameState === 'drawing') {
        console.log('Guess action detected, calling handleGuess');
        handleGuess(data.playerId, data.guess);
      }
    });

    return () => {
      socket.off('game-state-update');
      socket.off('controller-input');
    };
  }, [socket, isConnected, role]);

  // Draw on canvas
  useEffect(() => {
    console.log('=== CANVAS DRAW EFFECT ===');
    console.log('Canvas ref:', !!canvasRef.current);
    console.log('Drawing data length:', drawingData.length);
    
    if (!canvasRef.current) {
      console.log('No canvas ref');
      return;
    }

    const canvas = canvasRef.current;
    const ctx = canvas.getContext('2d');
    if (!ctx) {
      console.log('No context');
      return;
    }

    console.log('Clearing and redrawing canvas with', drawingData.length, 'points');
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    
    drawingData.forEach((point, index) => {
      if (index === 0) {
        ctx.beginPath();
        ctx.moveTo(point.x * canvas.width, point.y * canvas.height);
      } else {
        const prevPoint = drawingData[index - 1];
        ctx.strokeStyle = point.color;
        ctx.lineWidth = point.size;
        ctx.lineCap = 'round';
        ctx.lineJoin = 'round';
        
        ctx.beginPath();
        ctx.moveTo(prevPoint.x * canvas.width, prevPoint.y * canvas.height);
        ctx.lineTo(point.x * canvas.width, point.y * canvas.height);
        ctx.stroke();
      }
    });
  }, [drawingData]);

  // Timer
  useEffect(() => {
    if (gameState === 'drawing' && timeLeft > 0) {
      const timer = setTimeout(() => setTimeLeft(timeLeft - 1), 1000);
      return () => clearTimeout(timer);
    } else if (gameState === 'drawing' && timeLeft === 0) {
      endRound();
    }
  }, [gameState, timeLeft]);

  const handleGuess = (playerId: string, guess: string) => {
    console.log('=== GUESS RECEIVED ===');
    console.log('PlayerId:', playerId);
    console.log('Guess:', guess);
    console.log('Current Word:', currentWord);
    console.log('Match:', guess.toLowerCase().trim() === currentWord.toLowerCase());
    
    const playerScore = playerScores.get(playerId);
    console.log('Player Score:', playerScore);
    
    if (!playerScore || playerScore.guessed) {
      console.log('Player not found or already guessed');
      return;
    }

    if (guess.toLowerCase().trim() === currentWord.toLowerCase()) {
      console.log('‚úÖ CORRECT GUESS!');
      setPlayerScores(prev => {
        const updated = new Map(prev);
        const score = updated.get(playerId);
        if (score) {
          score.guessed = true;
          const points = Math.max(50, timeLeft * 2);
          score.score += points;
          console.log(`Added ${points} points. New score: ${score.score}`);
          updated.set(playerId, score);
          
          // Check if everyone (except drawer) has guessed
          const nonDrawerPlayers = Array.from(updated.values()).filter(
            s => s.playerId !== players[currentDrawerIndex].id
          );
          const allGuessed = nonDrawerPlayers.every(s => s.guessed);
          console.log('All players guessed?', allGuessed);
          
          if (allGuessed) {
            console.log('Everyone guessed! Ending round...');
            setTimeout(() => endRound(), 1000);
          }
        }
        return updated;
      });

      // Notify all players
      if (socket) {
        console.log('Broadcasting correct guess notification');
        socket.emit('game-state-update', {
          type: 'drawing-correct-guess',
          playerId,
          playerName: playerScore.name
        });
      }
    } else {
      console.log('‚ùå Wrong guess');
    }
  };

  const startRound = () => {
    setGameState('drawing');
    setTimeLeft(60);
    setDrawingData([]);
    
    setPlayerScores(prev => {
      const updated = new Map(prev);
      updated.forEach(score => {
        score.guessed = false;
      });
      return updated;
    });

    if (socket) {
      socket.emit('game-state-update', {
        type: 'drawing-round-start',
        drawerIndex: currentDrawerIndex,
        drawerId: players[currentDrawerIndex].id,
        word: currentWord,
        roundNumber
      });
    }
  };

  const endRound = () => {
    setGameState('results');
    
    if (socket) {
      socket.emit('game-state-update', {
        type: 'drawing-round-end',
        word: currentWord,
        scores: Array.from(playerScores.values())
      });
    }
  };

  const nextRound = () => {
    if (roundNumber < maxRounds) {
      const nextDrawerIndex = (currentDrawerIndex + 1) % players.length;
      const newWord = getRandomWord();
      
      setCurrentDrawerIndex(nextDrawerIndex);
      setCurrentWord(newWord);
      setRoundNumber(roundNumber + 1);
      setGameState('waiting');
      
      if (socket) {
        socket.emit('game-state-update', {
          type: 'drawing-init',
          drawerIndex: nextDrawerIndex,
          word: newWord
        });
      }
    } else {
      setGameState('final');
      
      if (socket) {
        socket.emit('game-state-update', {
          type: 'drawing-final',
          scores: Array.from(playerScores.values())
        });
      }
    }
  };

  const exitGame = () => {
    router.push('/host');
  };

  if (players.length === 0) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-green-900">
        <div className="text-white text-2xl">Loading game...</div>
      </div>
    );
  }

  const currentDrawer = players[currentDrawerIndex];
  const sortedScores = Array.from(playerScores.values()).sort((a, b) => b.score - a.score);

  return (
    <div className="min-h-screen bg-gradient-to-br from-green-900 via-teal-900 to-blue-900 p-8">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="flex justify-between items-center mb-8 text-white">
          <div>
            <h1 className="text-4xl font-bold">üé® Drawing Game</h1>
            <p className="text-xl">Round {roundNumber} of {maxRounds}</p>
          </div>
          <button
            onClick={exitGame}
            className="px-6 py-3 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition"
          >
            Exit Game
          </button>
        </div>

        {/* Waiting State */}
        {gameState === 'waiting' && role === 'host' && (
          <div className="text-center">
            <div className="bg-white rounded-2xl p-12 mb-8">
              <div
                className="w-24 h-24 rounded-full mx-auto mb-4"
                style={{ backgroundColor: currentDrawer.color }}
              />
              <h2 className="text-4xl font-bold mb-4 text-gray-800">
                {currentDrawer.name}'s turn to draw!
              </h2>
              <div className="bg-purple-100 border-4 border-purple-400 rounded-xl p-8 mb-8">
                <p className="text-2xl text-gray-600 mb-2">Get ready!</p>
                <p className="text-xl text-gray-600">
                  The drawer will see their word on their phone
                </p>
              </div>
              <p className="text-xl text-gray-600">
                Other players will try to guess what they're drawing!
              </p>
            </div>
            <button
              onClick={startRound}
              className="px-12 py-6 bg-green-600 hover:bg-green-700 text-white rounded-xl text-2xl font-bold transition transform hover:scale-105"
            >
              Start Drawing
            </button>
          </div>
        )}

        {/* Drawing State */}
        {gameState === 'drawing' && (
          <div>
            {/* Timer and Current Drawer */}
            <div className="flex justify-between items-center mb-6">
              <div className="bg-white rounded-xl p-4 flex items-center gap-4">
                <div
                  className="w-12 h-12 rounded-full"
                  style={{ backgroundColor: currentDrawer.color }}
                />
                <div>
                  <p className="text-sm text-gray-600">Drawing:</p>
                  <p className="text-xl font-bold text-gray-800">{currentDrawer.name}</p>
                </div>
              </div>
              
              <div className="bg-white rounded-xl px-8 py-4">
                <span className={`text-4xl font-bold ${timeLeft <= 10 ? 'text-red-600' : 'text-green-600'}`}>
                  {timeLeft}s
                </span>
              </div>

              <div className="bg-white rounded-xl p-4">
                <p className="text-sm text-gray-600">Letters:</p>
                <p className="text-2xl font-bold text-purple-600">
                  {currentWord.split('').map((char, i) => char === ' ' ? ' ' : '_').join(' ')}
                </p>
                <p className="text-xs text-gray-500 mt-1">({currentWord.length} letters)</p>
              </div>
            </div>

            {/* Canvas */}
            <div className="bg-white rounded-2xl p-4 mb-6">
              <canvas
                ref={canvasRef}
                width={800}
                height={600}
                className="w-full border-4 border-gray-300 rounded-xl bg-gray-50"
              />
            </div>

            {/* Players Status */}
            <div className="grid grid-cols-4 gap-4">
              {Array.from(playerScores.values()).map(score => (
                <div
                  key={score.playerId}
                  className={`rounded-lg p-4 text-center text-white font-semibold ${
                    score.playerId === currentDrawer.id
                      ? 'bg-purple-600'
                      : score.guessed
                      ? 'bg-green-600'
                      : 'bg-gray-600'
                  }`}
                >
                  {score.name}
                  {score.playerId === currentDrawer.id && ' (Drawing)'}
                  {score.guessed && ' ‚úì'}
                  <div className="text-xl mt-1">{score.score} pts</div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Results State */}
        {gameState === 'results' && role === 'host' && (
          <div>
            <div className="bg-white rounded-2xl p-12 mb-8 text-center">
              <h2 className="text-4xl font-bold mb-4 text-gray-800">The word was:</h2>
              <p className="text-7xl font-bold text-green-600 mb-8">{currentWord}</p>
              
              {/* Final Drawing */}
              <canvas
                ref={canvasRef}
                width={800}
                height={600}
                className="w-full border-4 border-gray-300 rounded-xl bg-gray-50 mb-8"
              />
            </div>

            {/* Scores */}
            <div className="bg-white rounded-xl p-6 mb-8">
              <h3 className="text-2xl font-bold mb-4 text-gray-800">Round Scores</h3>
              <div className="space-y-2">
                {sortedScores.map((score, index) => (
                  <div
                    key={score.playerId}
                    className="flex items-center justify-between p-4 bg-gray-100 rounded-lg"
                  >
                    <div className="flex items-center gap-4">
                      <span className="text-2xl font-bold text-gray-800">#{index + 1}</span>
                      <div
                        className="w-8 h-8 rounded-full"
                        style={{ backgroundColor: score.color }}
                      />
                      <span className="text-xl font-semibold text-gray-800">{score.name}</span>
                      {score.guessed && <span className="text-green-600">‚úì Guessed!</span>}
                    </div>
                    <span className="text-2xl font-bold text-blue-600">{score.score} pts</span>
                  </div>
                ))}
              </div>
            </div>

            <button
              onClick={nextRound}
              className="w-full px-12 py-6 bg-blue-600 hover:bg-blue-700 text-white rounded-xl text-2xl font-bold transition"
            >
              {roundNumber < maxRounds ? 'Next Round' : 'Show Final Results'}
            </button>
          </div>
        )}

        {/* Final Results */}
        {gameState === 'final' && (
          <div className="text-center">
            <h2 className="text-6xl font-bold text-white mb-8">üèÜ Final Results!</h2>
            
            <div className="bg-white rounded-2xl p-12 mb-8">
              {sortedScores.slice(0, 3).map((score, index) => (
                <div
                  key={score.playerId}
                  className={`mb-6 p-8 rounded-xl ${
                    index === 0
                      ? 'bg-gradient-to-r from-yellow-400 to-yellow-600'
                      : index === 1
                      ? 'bg-gradient-to-r from-gray-300 to-gray-400'
                      : 'bg-gradient-to-r from-orange-400 to-orange-600'
                  }`}
                >
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-6">
                      <span className="text-5xl">
                        {index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : 'ü•â'}
                      </span>
                      <div
                        className="w-16 h-16 rounded-full border-4 border-white"
                        style={{ backgroundColor: score.color }}
                      />
                      <span className="text-4xl font-bold text-white">{score.name}</span>
                    </div>
                    <span className="text-5xl font-bold text-white">{score.score} pts</span>
                  </div>
                </div>
              ))}

              {sortedScores.slice(3).map((score, index) => (
                <div
                  key={score.playerId}
                  className="mb-3 p-4 bg-gray-100 rounded-lg flex items-center justify-between"
                >
                  <div className="flex items-center gap-4">
                    <span className="text-2xl font-bold text-gray-800">#{index + 4}</span>
                    <div
                      className="w-10 h-10 rounded-full"
                      style={{ backgroundColor: score.color }}
                    />
                    <span className="text-2xl font-semibold text-gray-800">{score.name}</span>
                  </div>
                  <span className="text-2xl font-bold text-blue-600">{score.score} pts</span>
                </div>
              ))}
            </div>

            <button
              onClick={exitGame}
              className="px-12 py-6 bg-purple-600 hover:bg-purple-700 text-white rounded-xl text-2xl font-bold transition"
            >
              Back to Lobby
            </button>
          </div>
        )}
      </div>
    </div>
  );
}
